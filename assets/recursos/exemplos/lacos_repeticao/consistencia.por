programa
{
	funcao inicio()
	{
		inteiro idade
		
		faca
		{
			escreva ("Informe sua idade (valores aceitos de 5 a 150): ")
			leia (idade)
		}
		enquanto (idade < 5 ou idade > 150)
		
		// A partir deste ponto do código é garantido que a idade 
		// terá um valor válido e não causará erros inesperados		

		escreva ("\nCorreto!\n")
	}
}

