{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "packages",
  "projects": {
    "ide": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": false,
          "inlineStyle": false,
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:resolver": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "packages/ide",
      "sourceRoot": "packages/ide/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "allowedCommonJsDependencies": ["antlr4ng", "file-saver", "text-encoding"],
            "outputPath": "packages/ide/dist",
            "index": "packages/ide/src/index.html",
            "browser": "packages/ide/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "packages/ide/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/monaco-editor",
                "output": "assets/monaco-editor/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@portugol-webstudio/resources/assets",
                "output": "assets/recursos/"
              },
              {
                "glob": "**/*",
                "input": "packages/worker/lib",
                "output": "assets/portugol-worker/"
              },
              {
                "glob": "*.svg",
                "input": "./node_modules/@mdi/svg/svg/",
                "output": "./assets/mdi/"
              },
              {
                "glob": "manifest.webmanifest",
                "input": "packages/ide/src/",
                "output": "/"
              },
              "packages/ide/src/favicon.ico",
              "packages/ide/src/assets"
            ],
            "styles": ["packages/ide/src/styles.scss"],
            "stylePreprocessorOptions": {
              "includePaths": ["packages/ide/src/"]
            },
            "scripts": [],
            "serviceWorker": "packages/ide/ngsw-config.json",
            "sourceMap": {
              "scripts": true,
              "styles": true,
              "vendor": true
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "5MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "10kB"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "packages/ide/src/environments/environment.ts",
                  "with": "packages/ide/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ide:build:production"
            },
            "development": {
              "buildTarget": "ide:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
